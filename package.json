{
  "name": "yesmadam-automation-framework",
  "version": "1.0.0",
  "description": "Enterprise-level Playwright automation framework for YesMadam website",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project=chrome",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=safari",
    "test:mobile": "playwright test --project=mobile",
    "test:api": "playwright test tests/api/",
    "test:e2e": "playwright test tests/e2e/",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "report": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:send": "node utils/send-email-report.ts",
    "allure:email": "npm run allure:generate && ts-node src/utils/send-email-report.ts",
    "report:flow": "npm run allure:generate && npm run allure:send",
    "lint": "eslint src/ tests/ --ext .ts",
    "format": "prettier --write src/ tests/",
    "install:browsers": "playwright install"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "typescript",
    "framework"
  ],
  "author": "Automation Team",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "chalk": "^5.4.1",
    "dotenv": "^16.5.0",
    "faker": "^6.6.6",
    "mongodb": "^6.3.0",
    "mysql2": "^3.6.5",
    "nodemailer": "^7.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@playwright/test": "^1.53.1",
    "@types/archiver": "^6.0.3",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.5.2",
    "allure-playwright": "^2.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
